<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Calendar_LawrenceChu.DayPage"
    Title="New Event" BackgroundColor="#5F9EA0">
    <StackLayout Padding="30">
        
        <Entry Text="Title" TextColor="Silver"/>
        <Entry Text="Location" TextColor="Silver"/>
        <Entry Text="Starts" TextColor="Silver"/>
        <Entry Text="Ends" TextColor="Silver"/>
        <Entry Text="Detail" TextColor="Silver" HeightRequest="150"/>
        <Button BackgroundColor="#B0E0E6" Clicked="Handle_Clicked" Text="SAVE" TextColor="White" FontAttributes="Bold"/>
        <Label x:Name="MainLabel" HorizontalTextAlignment="Start" TextColor = "White" FontSize="15" FontAttributes="Bold"/>
        
    </StackLayout>
    
</ContentPage>
